{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",

//        "rootDir": "./src",
        "outDir": "./dist",

        "declaration": true,
        "esModuleInterop": true,
        "strict": true,

        "allowJs": true,
        "incremental": true,
        "skipLibCheck": true,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "strictPropertyInitialization": true,
        "noImplicitReturns": true,
        "importsNotUsedAsValues": "error",
    },
//    "exclude": [
//        "./test/*.ts",
//        "./test/sources/dynamic/*.js",
//        "node_modules"
//    ]
    "include": [
        "./src/**/*"
    ],
}
